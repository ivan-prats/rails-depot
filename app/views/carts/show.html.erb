<% if notice %>
<div id="notice" data-semantic-flash-notice_type="<%= flash[:notice_type] %>"
  class="mt-8 mb-4 rounded-md <%= flash[:notice_type] == 'success' ? 'bg-green-100' : 'bg-red-50' %> p-4">
  <div class="flex">
    <div class="flex-shrink-0">
      <% if flash[:notice_type] == 'success' %>
      <!-- Heroicon name: check-circle -->
      <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
          clip-rule="evenodd" />
      </svg>
      <% else %>
      <!-- Heroicon name: x-circle -->
      <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd"
          d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
          clip-rule="evenodd" />
      </svg>
      <% end %>
    </div>
    <div class="ml-3">
      <h3
        class="text-sm leading-5 font-medium <%= flash[:notice_type] == 'success' ? 'text-green-800' : 'text-red-800' %>">
        <%= notice %>
      </h3>
    </div>
  </div>
</div>
<% end %>

<h2 class="text-4xl leading-normal">Your Pragmatic Cart</h2>

<div class="mt-4">
  <table>
    <% @cart.line_items.each do |item| %>
    <tr>
      <td class="py-2"><span data-semantic="line_item.quantity"><%= item.quantity %></span> &times;</td>
      <td class="py-2 px-3" data-semantic="line_item.product.title"><%= item.product.title %></td>
      <td class="py-2 px-3" data-semantic="line_item.total_price"><%= number_to_currency(item.total_price, unit: '€') %>
      </td>
      <td class="py-2 px-3">
        <%= button_to('Take out', item, method: :delete, class: 'px-2 py-1 bg-red-100 hover:bg-red-200 text-red-800 text-xs rounded-md') %>
      </td>
    </tr>
    <% end %>

    <tfoot>
      <tr class="border-t border-0 border-black border-solid">
        <th class="py-2 px-3 text-right" colspan="2">Total:</th>
        <td class="py-2 px-3"><%= number_to_currency(@cart.total_price, unit: '€') %></td>
      </tr>
    </tfoot>
  </table>
</div>

<div class="mt-8">
  <%= button_to 'Empty cart', @cart, method: :delete, data: {confirm: 'Are you sure?'}, class: 'px-2 py-1 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-red-600 hover:bg-red-500'  %>
</div>