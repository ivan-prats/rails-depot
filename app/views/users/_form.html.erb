<%= form_with(model: user, local: true) do |form| %>
<% if user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

  <ul>
    <% user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<h2 class="text-2xl">Enter user details</h2>

<div class="field">
  <%= form.label :name, 'Your fullname: ' %>
  <%= form.text_field :name, size: 40 %>
</div>

<div class="field">
  <%= form.label :password, 'Password: ' %>
  <%= form.password_field :password, size: 40 %>
</div>

<div class="field">
  <%= form.label :password_confirmation, 'Confirm your password: ' %>
  <%= form.password_field :password_confirmation, size: 40, id: :user_password_confirmation  %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>
